{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "juniorfontenele/laravel-permission",
    "description": "RBAC + scoped permissions (all/self/attached) for Laravel",
    "homepage": "https://github.com/juniorfontenele/laravel-permission",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "JuniorFontenele\\LaravelPermission\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Junior Fontenele",
            "email": "git@juniorfontenele.com.br"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.0",
        "illuminate/contracts": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/auth": "^12.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "JuniorFontenele\\LaravelPermission\\LaravelPermissionServiceProvider"
            ],
            "aliases": {
                "Permission": "JuniorFontenele\\LaravelPermission\\Facades\\Permission"
            },
            "branch-alias": {
                "dev-main": "0.x-dev"
            }
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.8",
        "laravel/framework": "^12.0",
        "laravel/prompts": "^0.3.9",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.27",
        "driftingly/rector-laravel": "^2.1",
        "pestphp/pest": "^4.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "format": "@php vendor/bin/pint --config=pint.json --ansi",
        "rector": "@php vendor/bin/rector process --ansi --memory-limit=2G",
        "analyze": "@php vendor/bin/phpstan analyse --ansi --memory-limit=2G",
        "lint": [
            "@format",
            "@rector",
            "@analyze"
        ],
        "test": "@php vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}